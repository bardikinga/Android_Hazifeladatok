<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="50dp">

    <TextView
        android:id="@+id/infotextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="163dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="51dp"
        android:text="Cumparare:"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vevesID"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="51dp"
        android:text="Vanzare"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/eladasID"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/vevesID"
        android:layout_width="115dp"
        android:layout_height="31dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="44dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infotextViewID" />

    <TextView
        android:id="@+id/eladasID"
        android:layout_width="115dp"
        android:layout_height="28dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="19dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vevesID" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="154dp"
        android:layout_height="149dp"
        android:layout_marginBottom="157dp"
        android:layout_marginEnd="180dp"
        android:layout_marginStart="156dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/aud" />

</android.support.constraint.ConstraintLayout>
